<h1>New product</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e|%>
		<p><%= e %></p>
	<% end %>
<% end %>	

<form action="/products" method = "POST">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	Category:   
	<select id="Category" name="product[category_id]">
		<%@category.each do |c|%>
			<option value="<%=c.id%>"><%=c.name%></option>
		<% end %>
	</select><br>
	Name: <input type="text" name="product[name]" id="Name"><br>
	Description:  <input type="text" name="product[description]" id="Description"><br>
	Price:   <input type="text" name="product[pricing]" id="Price"><br>

	<input type="submit" name="Create" value="Create"><br>
</form>
<a href="/products">Back</a>